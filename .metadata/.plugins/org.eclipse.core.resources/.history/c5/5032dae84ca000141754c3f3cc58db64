package org.usfirst.frc.team4911.robot.subsystems;

import java.io.BufferedOutputStream;
import java.io.File;
import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.PrintStream;
import java.io.PrintWriter;

import edu.wpi.first.wpilibj.DriverStation;
import edu.wpi.first.wpilibj.command.Subsystem;

public class PrintSystem extends Subsystem {
    //PrintStream output;
	private int autoFileNum;
	private int teleFileNum;
	private PrintWriter autoWriter;
	private PrintWriter teleWriter;
	
	public PrintSystem(){
		autoFileNum = 1;
		teleFileNum = 1;
		//autoWriter = new PrintWriter(new File("/home/lvuser/MatchLog/autoLog" + autoFileNum + ".txt"));
		//teleWriter = new PrintWriter(new File("/home/lvuser/MatchLog/TeleLog" + teleFileNum + ".txt"));
	}
	
    public void initDefaultCommand() {
        
    }
    
    public void createNewAutoFile() {
    	try {
			autoWriter = new PrintWriter(new File("/home/lvuser/natinst/autoLog" + (autoFileNum++) + ".txt"));
		} 
    	catch (FileNotFoundException e) {
		}
    }
    
    public void createNewTeleFile() {
    	try {
    		teleWriter = new PrintWriter(new File("/home/lvuser/natinst/teleLog" + (teleFileNum++) + ".txt"));
    	}
    	catch(FileNotFoundException e) {
    	}
    }
    
    
    public void closeOutput() {
    	if(autoWriter != null) {
    		autoWriter.close();
    	}
    	if(teleWriter != null) {
    		teleWriter.close();
    	}
    }
    
    public void print() {
    	if(DriverStation.getInstance().isAutonomous()) {
    		autoWriter.println("hi Friend");
    	}
    	else if(DriverStation.getInstance().isOperatorControl()) {
    		teleWriter.println("lolololol");
    	}
    }
}

